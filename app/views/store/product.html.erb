<div id="templatemo_main">
	<div id="templatemo_content">
      <%= render 'breadcrumb', :category => @product.category %>
      <%#= render 'product_details', :product => @product %>
      
      <div class='product_detail'>
	      <div class='product_detail_images'>
		      <%=image_tag @product.photo.url(:big) %>
		      <div class='thumbnails'>
			      <ul>
				      <% @product.photos.each {|p| %>
				        <%= content_tag :li, image_tag(p.photo.url(:thumb))%>
				      <% } %>
			      </ul>
		      </div>
	      </div>
	      <div class='product_decsription'>
		      <h1><%=@product.name%></h1>
		      <h3>
		        <%= content_tag :span, number_to_currency(@product.price, {:unit=>"€"}), {:class=>:old_price} if @product.discount?%>
            <%= content_tag :span, number_to_currency(@product.final_price, {:unit=>"€"}), {:class=>:price}%>
		      </h3>
		      <%=link_to (content_tag :div, "Add To Cart", {:class=>:add_to_cart}), {:action => :add, :id => @product.id} %>
		      <p><%=@product.short_description%></p>
		      <p><%=@product.long_description%></p>
	      </div>
      </div>
  	
  </div>
    
  <div id="templatemo_sidebar">
        <%= render 'cart', :cart => @cart %>
        <div class="cleaner_h20"></div>
        <%=render 'categories', :categories => @categories %>
        <div class="cleaner_h20"></div>
        <%=render 'popular', :popular => @popular %>
        <div class="sidebar_box"></div>
    </div>
    <div class="cleaner"></div>
</div>
