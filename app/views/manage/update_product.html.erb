<%= render "shared/error_list", :item => @product %>
<%= form_for @product, :as => :product, :url=>{:action => :update_product, :id => @product.id} do |form| %>
    <%= render "product_form", :form => form %>
    <%= form.submit "Update" %>
<% end %>

<ul id='photos'>
<%@product.photos.each { |f| %>
  <li><%= image_tag f.photo.url(:thumb)%> <%=link_to "x", :action => :delete_photo, :id => f.id%></li>
<%}%>
</ul>

<%= render "shared/error_list", :item => @photo %>

<%= form_for @photo, :as => :photo,
        :url=>{:action => :add_photo},
        :html => { :multipart => true } do |form| %>
    <%= form.file_field :photo %>
    <%= form.hidden_field :product_id%>
    <%= form.submit "Upload" %>
<% end %>

